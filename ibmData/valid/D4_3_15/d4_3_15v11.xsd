<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="root" type="rootType" />  
	<xs:complexType name="rootType">
		<xs:sequence>
			<xs:element name="ele" type="xs:string" />
		</xs:sequence>
		<xs:attribute name="date" type="xs:date"/>
