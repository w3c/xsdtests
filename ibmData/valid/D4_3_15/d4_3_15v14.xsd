	<xs:complexType name="rootType">
		<xs:sequence>
			<xs:element name="ele1" type="elementType1" minOccurs="0" maxOccurs="unbounded"/>						
			<xs:element name="ele2" type="elementType2" minOccurs="0" maxOccurs="unbounded"/>						
